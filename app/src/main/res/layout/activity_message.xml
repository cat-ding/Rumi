<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flContainer"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.rumi.MessageActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:id="@+id/ivOtherProfileImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:foregroundGravity="left"
                app:srcCompat="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/tvOtherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Catherine Ding" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMessages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/etMessage"
            android:layout_below="@id/toolbar"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/btnSend"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="94dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="55dp"
            android:ems="9"
            android:inputType="textMultiLine"
            tools:text="Write a message..."
            android:background="@drawable/posts_border"/>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-45dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Send"
            android:onClick="sendMessage"/>

    </RelativeLayout>

</FrameLayout>